@model IEnumerable<Chocoworld.Models.Pedido>
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<h1>Ventas del día</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID del pedido</th>
            <th>Cliente</th>
            <th>Empleado</th>
            <th>Fecha del pedido</th>
            <th>Total</th>
            <th>Tipo de pago</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pedido in Model)
        {
            <tr>
                <td>@pedido.PedidoId</td>
                <td>@pedido.Cliente.Nombre</td>
                <td>@pedido.Empleado.Nombre</td>
                <td>@pedido.FechaPedido</td>
                <td>@pedido.Total</td>
                <td>@pedido.TipoPago</td>
            </tr>
        }
    </tbody>
</table>
<div>
    <h2>Total de ventas del día</h2>
    <p>@ViewBag.TotalVentasDelDia</p>
    <div>
        <h2>Total de ventas del día por QR</h2>
        <p>@ViewBag.TotalVentasDelDiaQR</p>
    </div>
    <div>
        <h2>Total de ventas del día por Efectivo</h2>
        <p>@ViewBag.TotalVentasDelDiaEfectivo</p>
    </div>
    <div>
        <h2>Total de ventas del día por Tarjeta</h2>
        <p>@ViewBag.TotalVentasDelDiaTarjeta</p>
    </div>
</div>


<div>
    <a asp-action="Index" class="btn btn-success">Volver al listado</a>
    
</div>
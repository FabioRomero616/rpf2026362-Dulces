@{
    ViewData["Title"] = "Catalogo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Chocoworld.Models.Producto>
<style>
    .carousel-inner img {
        width: 100%;
        height: 300px; /* Ajusta la altura según tus necesidades */
        object-fit: cover;
    }
</style>
<div class="container">
    <h1>Productos Disponibles</h1>
    <div class="row">
        @foreach (var producto in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    @if (producto.Imagenes != null && producto.Imagenes.Any())
                    {
                        <div id="carousel-@producto.ProductoId" class="carousel slide" data-ride="carousel" data-interval="false">
                            <div class="carousel-inner">
                                @foreach (var imagen in producto.Imagenes)
                                {
                                    <div class="carousel-item@(imagen == producto.Imagenes.First() ? " active" : "")">
                                        <img src="@imagen.Ruta" class="d-block w-100 img-fluid" alt="Imagen del producto">
                                    </div>
                                }
                            </div>
                            <a class="carousel-control-prev" href="#carousel-@producto.ProductoId" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel-@producto.ProductoId" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@producto.Nombre</h5>
                        <p class="card-text">@producto.Descripcion</p>
                        <p class="card-text">Categoría: @(producto.Categoria?.Nombre)</p>
                        <p class="card-text">Precio: Bs.@producto.Precio</p>

                    </div>
                </div>
            </div>
        }
    </div>

</div>



@model IEnumerable<Chocoworld.Models.Envio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaEnvio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MetodoEnvio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoEnvio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pedido)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaEnvio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetodoEnvio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoEnvio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion.DireccionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pedido.PedidoId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EnvioId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EnvioId">Details</a> |
                    @if (User.IsInRole("Administrador"))
                    {
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.EnvioId">Eliminar</a>
                    }
                </td>
        </tr>
}
    </tbody>
</table>

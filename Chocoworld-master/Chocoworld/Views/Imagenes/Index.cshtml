@model IEnumerable<Chocoworld.Models.Imagene>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear imagen</a>
</p>
<form asp-controller="imagenes" asp-action="Index">
    <p>
        <label class="form-label" for="form1">Buscar</label>
        <input type="search" id="form1" name="buscar" class="form-control" />
        <input type="submit" value="Buscar" class="btn btn-primary m-1" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Extension)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.Extension)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto.ProductoId)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.ImagenId">Editar</a> |
                    <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.ImagenId">Detalles</a> |
                    @if (User.IsInRole("Administrador"))
                    {
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ImagenId">Eliminar</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>

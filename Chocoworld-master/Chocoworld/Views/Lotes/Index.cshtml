@model IEnumerable<Chocoworld.Models.Lote>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<h1>lotes</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear lote</a>
</p>
<form asp-controller="Lotes" asp-action="Index">
    <p>
        <label class="form-label" for="form1">Buscar</label>
        <input type="search" id="form1" name="buscar" class="form-control" />
        <input type="submit" value="Buscar" class="btn btn-primary m-1" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaIngreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaVencimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Producto.Nombre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaIngreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaVencimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
       
            <td>
                @Html.DisplayFor(modelItem => item.Producto.Nombre)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.LoteId">Editar</a> |
                    <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.LoteId">Detalles</a> |
                    @if (User.IsInRole("Administrador"))
                    {
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.LoteId">Eliminar</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
